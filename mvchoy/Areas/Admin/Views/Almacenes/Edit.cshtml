@model mvchoy.Models.Almacen
@{
    ViewData["Title"] = "Editar almacen";
    ViewData["ShowWelcomeMessage"] = false; // Para evitar que aparezca el mensaje
}
<h3 class="text-center" style="margin-top: 100px;">Editar almacen</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 Border mt-4">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="col-10 offset-1 mt4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreAlmacen"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreAlmacen" class="form-control" placeholder="Ingresa el Nombre" />
                    <span asp-validation-for="NombreAlmacen" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />

          
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa el Orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>

            <br />



        <!--añadiendo 2 columnas-->

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Direccion"></label>6
                </div>
                <div class="col-8">
                    <input asp-for="Direccion" class="form-control" placeholder="Ingresa la direccion" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UrlImagen" class="form-control" placeholder="Ingresa la URL" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />




            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Almacen</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atras</a>
                </div>
            </div>

        </div>
    </div>
</form>
