	@{
    ViewData["Title"] = "Lista de Almacenes";
    ViewData["ShowWelcomeMessage"] = false; // Para evitar que aparezca el mensaje
}
<div class="container " style="margin-top: 80px;">
    <div class="row">
        <div class="col-8 mt-5">
            <h2 class="text-primary" style="margin-top: 40px;">Lista de Almacenes</h2>
        </div>
        <div class="col-4 text-right " style="margin-top: 80px;">
            <a asp-action="Create" class="btn btn-primary ">
                <i class="fa-solid fa-plus "></i>Crear Nuevo Almacén
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblAlmacenes" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>

</div>

@section Scripts{
    <script src="~/js/almacen.js"></script>
}

